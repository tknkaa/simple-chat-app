{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "dom"]
  },
  "include": ["db/connection.ts", "server.ts", "models/messageModel.ts"],
  "exclude": ["node_modules"]
}
